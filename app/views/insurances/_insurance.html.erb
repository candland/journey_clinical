<div id="<%= dom_id insurance %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= insurance.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this insurance", insurance, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this insurance", edit_insurance_path(insurance), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
